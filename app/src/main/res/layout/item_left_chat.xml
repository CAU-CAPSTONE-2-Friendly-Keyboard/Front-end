<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/tvChatImg"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bot1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tvChatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChatGpt"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/tvChatImg"
        app:layout_constraintTop_toTopOf="@id/tvChatImg"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tvChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvChatTitle"
        app:layout_constraintTop_toBottomOf="@id/tvChatTitle"
        android:background="@drawable/chat_bubble"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:maxWidth="200dp"/>

    <TextView
        android:id="@+id/tvChatDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvChat"
        app:layout_constraintBottom_toBottomOf="@id/tvChat"
        android:layout_marginStart="5dp"
        android:textSize="11sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>